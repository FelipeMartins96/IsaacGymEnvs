<robot name="vss_robot">
    <link name="robot_body">
        <visual>
            <geometry>
                <box size="0.075 0.075 0.075" />
            </geometry>
        </visual>
        <collision>
            <geometry>
                <box size="0.075 0.075 0.075" />
            </geometry>
        </collision>
        <inertial>
            <mass value="1" />
        </inertial>
    </link>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.020" length="0.005" />
            </geometry>
            <origin rpy="0.0 -1.5707963 0.0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.020" length="0.005" />
            </geometry>
            <origin rpy="0.0 -1.5707963 0.0" />
        </collision>
        <inertial>
            <mass value="0.2" />
        </inertial>

    </link>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.020" length="0.005" />
            </geometry>
            <origin rpy="0.0 1.5707963 0.0" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.020" length="0.005" />
            </geometry>
            <origin rpy="0.0 1.5707963 0.0" />
        </collision>
        <inertial>
            <mass value="0.2" />
        </inertial>
    </link>

    <joint name="left_wheel_axis" type="continuous">
        <origin xyz="-0.04 0.0 -0.01875" />
        <parent link="robot_body" />
        <child link="left_wheel" />
        <axis xyz="-1 0 0" />
        <limit effort="10000.0" velocity="10.0" />
    </joint>

    <joint name="right_wheel_axis" type="continuous">
        <origin xyz="0.04 0.0 -0.01875" />
        <parent link="robot_body" />
        <child link="right_wheel" />
        <axis xyz="1 0 0" />
        <limit effort="10000.0" velocity="10.0" />
    </joint>

</robot>